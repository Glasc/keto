---
import { SiFacebook, SiUbereats, SiInstagram } from "react-icons/si/index.js";
import type { Links } from "../layouts/Layout.astro";

type Props = Links

const { facebookUrl, instagramUrl, uberEatsUrl } = Astro.props;

---

<footer class="bg-base-300 py-5 sm:p-10">
  <div class="footer footer-center text-base-content rounded container">
    <div class="grid sm:grid-flow-col gap-4">
      <a class="link link-hover">About us</a>
      <a class="link link-hover">Contact</a>
      <a class="link link-hover">Jobs</a>
      <a class="link link-hover">Press kit</a>
    </div>
    <div>
      <div class="flex space-x-6">
        <a class="cursor-pointer" target="_blank" href={facebookUrl}><SiFacebook size={30} color="#1871E7" /></a>
        <a class="cursor-pointer" target="_blank" href={uberEatsUrl}><SiUbereats size={30} color="#06C167" /></a>
        <a class="cursor-pointer" target="_blank" href={instagramUrl}><SiInstagram size={30} color="#AF36A7" /></a>
      </div>
    </div>
    <div>
      <p>Copyright Â© 2022 - All right reserved by ACME Industries Ltd</p>
    </div>
  </div>
</footer>
