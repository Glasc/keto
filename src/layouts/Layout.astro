---
import "../style/base.css";
import { Navbar } from "../components/navbar/Navbar";
import Footer from "../components/Footer.astro";
import BottomNav from "../components/navbar/BottomNav.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" data-theme="mytheme">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/iconos.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-base-200 flex flex-col min-h-screen">
    <Navbar />
    <div class="flex-1">
      <slot />
    </div>
    <!-- <BottomNav /> -->
    <Footer />
    <style is:global lang="scss"></style>
  </body>
</html>
