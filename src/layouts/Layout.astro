---
export interface Props {
  title: string;
}

import "../style/base.css";

const { title } = Astro.props;

import {
  RiHome2Line,
  RiInformationLine,
  RiFilePaper2Line,
  RiContactsLine,
} from "react-icons/ri/index.js";
---

<!DOCTYPE html>
<html lang="en" data-theme="mytheme">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />

    <div class="btm-nav h-12 sticky z-30 sm:hidden">
      <button class="active">
        <RiHome2Line />
      </button>
      <button>
        <RiInformationLine />
      </button>
      <button>
        <RiFilePaper2Line />
      </button>
      <button>
        <RiContactsLine />
      </button>
    </div>
    <style is:global lang="scss"></style>
  </body>
</html>
